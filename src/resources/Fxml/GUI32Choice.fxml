<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="94.0" prefWidth="780.0" style="-fx-background-color: E0E0E0;"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.GUI32ChoiceController">
   <VBox prefHeight="200.0" prefWidth="780.0">
      <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="780.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </ImageView>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
         <Label prefHeight="22.0" prefWidth="120.0" text="Choice ">
            <font>
               <Font size="15.0"/>
            </font>
            <HBox.margin>
               <Insets left="10.0"/>
            </HBox.margin>
         </Label>
         <TextArea fx:id="textArea" prefHeight="39.0" prefWidth="525.0"/>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
         <Label prefHeight="22.0" prefWidth="120.0" text="Grade">
            <font>
               <Font size="15.0"/>
            </font>
            <HBox.margin>
               <Insets left="10.0"/>
            </HBox.margin>
         </Label>
         <ComboBox fx:id="gradeComboBox" prefWidth="150.0"/>
      </HBox>
   </VBox>
</HBox>
